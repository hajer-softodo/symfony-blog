{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

<section class="articles">
<div id="accordion">
{% for article in articles %}
<div class="card">
   <div class="card-header" id="{{ article.title }}">
     <h3  class="mb-0">
      <button class="btn btn-link" data-toggle="collapse" data-target="#{{ article.title }}" aria-expanded="true" aria-controls="{{ article.title }}">
         {{ article.title }}
         </button>
      </h3>
   </div>  
   <div id="{{ article.title }}" class="collapse" aria-labelledby="{{ article.title }}" data-bs-parent="#accordion">
      <div class="card-body">
         <div class="metadata">
                  Ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }} dans la catégorie Politique
               </div>
               <div class="content">
                  <img src="{{ article.image }}" alt="">
                       {{ article.content | raw}}
                        <a href="{{ path('blog_show',{'id' : article.id}) }}" class="btn btn-primary">Lire la suite</a>
               </div>
       
         </div>
      </div>
    
</div>  
{% endfor %}
</div>
</section>
{% endblock %}
