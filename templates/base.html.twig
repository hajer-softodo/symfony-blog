        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <div class="container-color">
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('home') }}">Présentation</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarColor01">
                            <ul class="navbar-nav me-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_blog') }}">Articles</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('blog_create') }}">Créer un article</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('security_registration') }}">Inscription</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Galerie</a>
                                </li>
                                {% if not app.user %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('security_login') }}">Connexion</a>
                                    </li>
                                {% else %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('security_logout') }}">Déconnexion</a>
                                    </li>
                                {% endif %}
                    </ul>
                    </div>
                </div>
            </nav>
        <div class="container">
                {% block body %}{% endblock %}
        </div>
        {% block javascript %}{% endblock %}
        </div>
    </body>
